#!/bin/sh

set -e

cd /apps/vc-chat

node_version=$(cat .nvmrc)


. ~/.nvm/nvm.sh

if [[ $(nvm ls | grep ${node_version}) == "" ]]; then
  nvm install
else
  nvm use
fi

echo "Installing pm2"
nvm exec npm install -g pm2

echo "Installing node packages"
nvm exec npm install

echo "Starting pm2"
pm2 start npm -- start
exit 1